
<h1>Hospital Buildings</h1>

<%= search_form_for @q, url: buildings_path do |f| %>

  <%= f.search_field :name_cont, placeholder: "Search phrase..." %>

  <%= f.submit name: '' %>
<% end %>

<br/>
<button type="button" class="btn btn-secondary btn-sm"><%= link_to 'Add Building', new_building_path, :class => "btn" %></button>
<br/>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th><%= sort_link(@q, :name, "Building name",{}, { class: "link-light" }) %></th>
      <th>Floors</th>
    </tr>
  </thead>

  <tbody>
  <% @buildings.each do |building| %>
    <tr>
      <td><button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to building.name, building_path(building), :class => "btn" %></button></td>
      <td><button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to building.floors.count, building_floors_path(building), :class => "btn" %></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>


