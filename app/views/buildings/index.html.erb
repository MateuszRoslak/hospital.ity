
<h1>Hospital Buildings</h1>

<%= search_form_for @q, url: buildings_path do |f| %>

  <%= f.search_field :name_cont, placeholder: "Search phrase..." %>

  <%= f.submit name: '' %>
<% end %>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th><%= sort_link(@q, :name, "Building name",{}, { class: "link-light" }) %></th>
      <th>Floors</th>
    </tr>
  </thead>

  <tbody>
  <% @buildings.each do |building| %>
    <tr>
      <td><%= link_to building.name, building_path(building) %></td>
      <td><%= link_to building.floors.count, building_floors_path(building) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Building', new_building_path %>
