<div class="card">
  <h3 class="card-header">Post details</h3>
  <div class="card-body">
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Message:</strong>
      <%= @post.message %>
    </p>

    <p>
      <strong>Public:</strong>
      <%= @post.public %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= @post.user.name %> <%= @post.user.surname %>
    </p>

    <% if @post.thumbnail.attached? %>
    <div class="card">
      <h3 class="card-header">Attached thumbnail</h3>
      <%= link_to image_tag(@post.thumbnail, style: 'width:20%'), @post.thumbnail %>
    </div><br/>
    <% end %>
    <%= link_to 'Back', posts_path, class: "btn btn-outline-secondary text-dark" %>
    |
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-outline-secondary text-dark" %>
  </div>
</div>
