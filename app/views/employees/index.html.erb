<h1>System Users</h1>

<table class="table table-striped table-bordered table-hover sortable">
  <thead>
    <tr class="table-dark">
      <th>Full name</th>
      <th>Email</th>
      <th>System role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name + ' ' + user.surname, edit_employee_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
