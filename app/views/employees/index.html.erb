<div class="card">
  <h3 class="card-header">System Users</h3>
  <div class="card-body">
    <%= search_form_for @q, url: employees_path do |f| %>
      <%= f.search_field :name_or_surname_or_email_cont, placeholder: "Search phrase..." %>
      <%= f.select :role_eq, options_for_select([
                                                  ['Any role...', ''],
                                                  ['Inactive', 0],
                                                  ['Admin', 1],
                                                  ['Inspector', 2],
                                                  ['Security guard', 3],
                                                  ['Janitor', 4],
                                                  ['Doctor', 5],
                                                  ['Nurse', 6],
                                                  ['Office', 7],
                                                  ['Technic', 8]
                                                ])%>
      <%= f.submit name: '', class: "btn btn-outline-secondary btn-sm mb-1 text-dark" %>
    <% end %>
    <br/>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="table-dark">
          <th><%= sort_link(@q, :name, "Full name",{}, { class: "link-light" }) %></th>
          <th><%= sort_link(@q, :email, "Email address",{}, { class: "link-light" }) %></th>
          <th><%= sort_link(@q, :role, "System role",{}, { class: "link-light" }) %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to user.name + ' ' + user.surname, edit_employee_path(user), :class => "btn" %></button></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>