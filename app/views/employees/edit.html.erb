<h1>User Profile</h1>

<div class="jumbotron">
  <h1 class="display-4">
    <%= @user.name %>
    <%= @user.surname %>
  </h1>
  <p class="lead">
    <%= "Email: " + @user.email %>
    <br/>
    <%= "Role: " %>

  </p>
</div>

<%= render 'form', user: @user %>

<%= button_to "Delete account", employee_path(@user), data: { confirm: "Are you sure?" }, method: :delete %>

<%= link_to 'Back', employees_path %>
