<%= form_with(model: demand_report) do |form| %>
  <% if demand_report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(demand_report.errors.count, "error") %> prohibited this demand_report from being saved:</h2>

      <ul>
        <% demand_report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, value: "Demand report", class: "form-control" %>
  </div><br/>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div><br/>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <p>Upload picture</p>
    <%= form.file_field :picture %>
  </div><br/>

  <div class="field">
    <p>Status</p>
    <%= form.select :status,
                  [
                    ['Awaits', 'awaits'],
                    ['Accepted', 'accepted'],
                    ['Canceled', 'canceled'],
                    ['Completed', 'completed']
                  ], {}, {class: "form-control form-select mb-3"} %>
  </div><br/>

  <div class="actions">
    <%= form.submit :Submit, class: "btn btn-outline-secondary text-dark" %>
  </div>
<% end %>
