<h1>Wards / <%= @floor.name %> floor / <%= @building.name %> building</h1>

<%= search_form_for @q, url: building_floor_wards_path do |f| %>

  <%= f.search_field :name_cont, placeholder: "Search phrase..." %>

  <%= f.submit name: '' %>
<% end %>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th><%= sort_link(@q, :name, "Ward name",{}, { class: "link-light" }) %></th>
      <th>Rooms</th>
    </tr>
  </thead>

  <tbody>
    <% @wards.each do |ward| %>
      <tr>
        <td><%= link_to ward.name, building_floor_ward_path(@building, @floor, ward) %></td>
        <td><%= link_to ward.rooms.count, building_floor_ward_rooms_path(@building, @floor, ward) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ward', new_building_floor_ward_path %>
<br/>
<%= link_to 'Floors', building_floors_path %>
