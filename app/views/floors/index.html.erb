<div class="card">
  <h3 class="card-header">Floors / <%= @building.name %> building</h3>
  <div class="card-body">
    <%= search_form_for @q, url: building_floors_path do |f| %>
      <%= f.search_field :name_cont, placeholder: "Search phrase..." %>
      <%= f.submit name: '' %>
    <% end %>
    <br/>
    <button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to '<- Buildings', buildings_path, :class => "btn" %></button>
    <button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to 'Add Floor', new_building_floor_path, :class => "btn" %></button>
    <br/><br/>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="table-dark">
          <th><%= sort_link(@q, :name, "Floor name",{}, { class: "link-light" }) %></th>
          <th>Wards</th>
        </tr>
      </thead>
      <tbody>
        <% @floors.each do |floor| %>
          <tr>
            <td><button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to floor.name, building_floor_path(@building, floor), :class => "btn"  %></button></td>
            <td><button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to floor.wards.count, building_floor_wards_path(@building, floor), :class => "btn"  %></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
