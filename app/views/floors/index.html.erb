
<h1>Floors / <%= @building.name %> building</h1>

<%= search_form_for @q, url: building_floors_path do |f| %>

  <%= f.search_field :name_cont, placeholder: "Search phrase..." %>

  <%= f.submit name: '' %>
<% end %>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th><%= sort_link(@q, :name, "Floor name",{}, { class: "link-light" }) %></th>
      <th>Wards</th>
    </tr>
  </thead>

  <tbody>
    <% @floors.each do |floor| %>
      <tr>
        <td><%= link_to floor.name, building_floor_path(@building, floor) %></td>
        <td><%= link_to floor.wards.count, building_floor_wards_path(@building, floor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Floor', new_building_floor_path %>
<br/>
<%= link_to 'Buildings', buildings_path %>
