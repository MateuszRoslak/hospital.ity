<%= form_with model: [@building, @floor, @ward, @room].compact, local: true do |form| %>
    <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div><br/>

  <div class="field">
    <%= form.label :room_type %>
    <%= form.select :room_type,
                    [
                      ['Patient room', 'patients'],
                      ['Toilet', 'toilet'],
                      ['Storage room', 'storage'],
                      ['Office', 'office'],
                      ['Surgery room', 'surgery'],
                      ['Post surgery room', 'post_surgery'],
                    ], {}, {class: "form-control form-select"} %>
  </div><br/>

  <div class="actions">
    <%= form.submit :Submit, class: "btn btn-outline-secondary text-dark" %>
  </div>
<% end %>
