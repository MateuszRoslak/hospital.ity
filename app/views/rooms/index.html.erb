<h1>Rooms / <%= @ward.name %> ward / <%= @floor.name %> floor / <%= @building.name %> building</h1>

<%= search_form_for @q, url: building_floor_ward_rooms_path do |f| %>

  <%= f.search_field :name_cont, placeholder: "Search phrase..." %>

  <%= f.submit name: '' %>
<% end %>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr class="table-dark">
    <th><%= sort_link(@q, :name, "Room name",{}, { class: "link-light" }) %></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, building_floor_ward_room_path(@building, @floor, @ward, room) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_building_floor_ward_room_path %>
<br/>
<%= link_to 'Wards', building_floor_wards_path %>